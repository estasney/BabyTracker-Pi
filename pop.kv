<pop>:
    Accordion:
        id: nav

        AccordionItem:
            title: "Recent"
            AnchorLayout:
                anchor_x: 'center'
                GridLayout:
                    cols: 1
                    padding:15
                    spacing:10

                    Label:
                        text: app.last_logs[0]
                        font_size: 20

                    Label:
                        text: app.last_logs[1]
                        font_size: 20

                    Label:
                        text: app.last_logs[2]
                        font_size: 20


                    Label:
                        text: app.last_logs[3]
                        font_size: 20

                    Label:
                        text: app.last_logs[4]
                        font_size: 20



        AccordionItem:
            title: "Medicine"
            AnchorLayout:
                anchor_x: 'center'
                GridLayout:
                    cols: 1
                    padding:15
                    spacing:10

                    GridLayout:
                        cols: 1
                        padding:5
                        spacing:5

                        Button:
                            text: "Tylenol"
                            font_size:20
                            on_release: root.post_data_on_open(entry_content=self.text)
                            on_press: root.get_the_time(indicator=self.text, target=medtime, pickle_file_name='med_time.pkl')
                            on_press: root.tally_count(pickle_file_name= "med_count.pkl")
                            on_press: app.update_widget_time(k='medtime')

                        Button:
                            text: "Motrin"
                            font_size:20
                            on_release: root.post_data_on_open(entry_content=self.text)
                            on_press: root.get_the_time(indicator=self.text, target=medtime, pickle_file_name='med_time.pkl')
                            on_press: root.tally_count(pickle_file_name= "med_count.pkl")
                            on_press: app.update_widget_time(k='medtime')

                        Button:
                            text: "Antibiotics"
                            font_size:20
                            on_release: root.post_data_on_open(entry_content=self.text)
                            on_press: root.get_the_time(indicator=self.text, target=medtime, pickle_file_name='med_time.pkl')
                            on_press: root.tally_count(pickle_file_name= "med_count.pkl")
                            on_press: app.update_widget_time(k='medtime')

                        Button:
                            text: "Probiotic"
                            font_size:20
                            on_release: root.post_data_on_open(entry_content=self.text)
                            on_press: root.get_the_time(indicator=self.text, target=medtime, pickle_file_name='med_time.pkl')
                            on_press: root.tally_count(pickle_file_name= "med_count.pkl")
                            on_press: app.update_widget_time(k='medtime')

                        Button:
                            text: "Other OTC"
                            font_size:20
                            on_release: root.post_data_on_open(entry_content=self.text)
                            on_press: root.get_the_time(indicator=self.text, target=medtime, pickle_file_name='med_time.pkl')
                            on_press: root.tally_count(pickle_file_name= "med_count.pkl")
                            on_press: app.update_widget_time(k='medtime')

                    GridLayout:
                        cols: 1
                        rows: 2
                        padding:5
                        spacing:5

                        GridLayout:
                            cols: 1
                            padding:5
                            spacing:5

                            Label:
                                text: "Last Medication:"
                                font_size: 20

                            Label:
                                id: medtime
                                font_size: 20
                                on_parent: root.load_history(pickle_file_name='med_time.pkl', target=medtime)

                            Label:
                                id: elapsed_meta_label
                                font_size: 20
                                text: app.widget_elapsed_times['medtime']
                                markup: app.meta_markup_bool

                        GridLayout:
                            cols: 3
                            padding:5
                            spacing:5

                            Label:

                            Label:

                            Label:
                                font_size: 20
                                text: app.clock_time

        AccordionItem:
            title: "Feeding"
            AnchorLayout:
                anchor_x:'center'
                GridLayout:
                    cols: 1
                    padding:15
                    spacing:10

                    GridLayout:
                        cols: 1
                        padding:5
                        spacing:5

                        Button:
                            text: "Bottle"
                            font_size: 20
                            on_release: root.post_data_on_open(entry_content=self.text)
                            on_press: root.get_the_time(indicator=self.text,target=feedtime, pickle_file_name='feed_time.pkl')
                            on_press: root.tally_count(pickle_file_name = "feedings.pkl")
                            on_press: app.update_widget_time(k='feedtime')

                        Button:
                            text: "Solid Food"
                            font_size: 20
                            on_release: root.post_data_on_open(entry_content=self.text)
                            on_press: root.get_the_time(indicator=self.text, target=feedtime, pickle_file_name='feed_time.pkl')
                            on_press: root.tally_count(pickle_file_name = "feedings.pkl")
                            on_press: app.update_widget_time(k='feedtime')

                    GridLayout:
                        cols: 1
                        rows: 2
                        padding:5
                        spacing:5

                        GridLayout:
                            cols: 1
                            padding:5
                            spacing:5

                            Label:
                                text: "Last Feeding Was:"
                                pos_hint:{'x':0,'y':0}
                                font_size: 20

                            Label:
                                id: feedtime
                                on_parent: root.load_history(pickle_file_name='feed_time.pkl', target=feedtime)
                                pos_hint:{'x':0,'y':-.1}
                                font_size: 20

                            Label:
                                id: elapsed_meta_label
                                text: app.widget_elapsed_times['feedtime']
                                pos_hint:{'x':0,'y':-.2}
                                font_size: 20
                                markup: app.meta_markup_bool

                        GridLayout:
                            cols: 3
                            padding:5
                            spacing:5

                            Label:

                            Label:

                            Label:
                                font_size: 20
                                text: app.clock_time



